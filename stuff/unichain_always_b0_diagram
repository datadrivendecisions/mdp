// Unichain
digraph {
	nodesep=1.5 rankdir=LR ranksep=2.0
	node [shape=circle]
	A [label="x̂, b0"]
	B [label="x̂, b1"]
	C [label="x̂, b2"]
	node [shape=doublecircle]
	D [label="x ≠ x̂"]
	A -> A [label=b0]
	B -> A [label=b0]
	C -> A [label=b0]
	A -> D [label=b0 style=dashed]
	D -> A [label=b0 style=dashed]
	B -> D [label=b0 style=dashed]
	C -> D [label=b0 style=dashed]
	D -> D [label=b0]
}
